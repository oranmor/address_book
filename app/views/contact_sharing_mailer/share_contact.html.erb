<p><%= Contact.human_attribute_name(:first_name) %>: <%= @contact.first_name %></p>
<p><%= Contact.human_attribute_name(:last_name) %>: <%= @contact.last_name %></p>
<p><%= Contact.human_attribute_name(:phones) %>:</p>
<ul><% @contact.phones.each do |phone| %>
    <li><%= phone %></li>
<% end %>
</ul>
<p><%= Contact.human_attribute_name(:emails) %>:</p>
<ul>
<% @contact.emails.each do |email| %>
    <li><%= mail_to email %></li>
<% end %>
</ul>
<br>
<%= link_to t('.link_to_contact'), contact_url(@contact) %>
